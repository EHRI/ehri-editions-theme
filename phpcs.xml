<?xml version="1.0"?>
<ruleset name="EhriEditionsTheme">
    <description>PSR-2 coding standard</description>

    <!-- Use PSR-2 as base standard -->
    <rule ref="PSR2"/>
    <rule ref="Squiz.ControlStructures.ControlSignature">
        <properties>
            <property name="requiredSpacesBeforeColon" value="0"/>
        </properties>
    </rule>

    <!-- Directories to check -->
    <file>.</file>
    <file>collections</file>
    <file>common</file>
    <file>exhibit-builder</file>
    <file>items</file>
    <file>search</file>
    <file>solr-search</file>

    <!-- Directories to exclude -->
    <exclude-pattern>*/slick/*</exclude-pattern>
    <exclude-pattern>*/css/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/javascripts/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
    <exclude-pattern>*/fonts/*</exclude-pattern>
    <exclude-pattern>*/photoswipe/*</exclude-pattern>
    <exclude-pattern>*/pkg/*</exclude-pattern>
    <exclude-pattern>*/Gruntfile.js</exclude-pattern>

    <!-- Show progress -->
    <arg name="report" value="full"/>
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>
